# general global options
set guioptions "" 
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
# set adjust-open "best-fit"


# forward and backward search with neovim
set synctex true
set synctex-editor-command "gvim --remote-silent +%{line} %{input}"
# set synctex-editor-command "nvr --remote-silent %f -c %l"

# copy text
set selection-clipboard clipboard

# mapping config
map r reload
map p print
map i recolor
map K zoom in
map J zoom out
map R rotate
unmap f
map f toggle_fullscreen
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map t toggle_statusbar

# Stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100


# zathurarc-dark
set highlight-transparency 0.1
set highlight-active-color \#e2b3ff
set highlight-color \#fed4ff
set notification-error-bg       "#303030"
set notification-error-fg       "#E1AA5D"
set notification-warning-bg     "#303030"
set notification-warning-fg     "#E84F4F"
set notification-bg             "#303030"
set notification-fg             "#cccccc"

set completion-group-bg         "#002b36"
set completion-group-fg         "#839496"
set completion-bg               "#073642"
set completion-fg               "#93a1a1"
set completion-highlight-bg     "#586e75"
set completion-highlight-fg     "#c2c2b0"

# Define the color in index mode
set index-bg                    "#073642"
set index-fg                    "#93a1a1"
set index-active-bg             "#586e75"
set index-active-fg             "#c2c2b0"

set inputbar-bg                 "#586e75"
set inputbar-fg                 "#c2c2b0"

set statusbar-bg                "#121212"
set statusbar-fg                "#DDCCBB"
set render-loading              true
set render-loading-fg           "#073642"
set render-loading-bg           "#073642"

# Recolor book content's color
set recolor                     true 
set recolor-lightcolor          "#0f081c"
set recolor-darkcolor           "#D7D0C7"
set recolor-keephue             true
