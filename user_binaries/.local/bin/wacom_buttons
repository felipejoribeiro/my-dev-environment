#!/bin/bash


xsetwacom set "Wacom Cintiq 13HD Pad pad" Button  2 "key 2" # Button up up
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button  3 "key 3" # Button up


# Whell 
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button 1 "key 1"    # whell center button
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button 10 "key +super +ctrl +alt z -ctrl -alt -super" # whell right
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button 11 "key o n" # whell up
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button 13 "key t r" # whell down
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button 12 "key d o" # whell left

xsetwacom set "Wacom Cintiq 13HD Pad pad" Button  8 "key 8" # button down
xsetwacom set "Wacom Cintiq 13HD Pad pad" Button  9 "key 9" # button down down
